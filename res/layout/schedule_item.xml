<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="?android:attr/listPreferredItemHeightLarge">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:padding="8dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp" >
 
    
 
    <!-- Event Title -->
    <TextView
        android:id="@+id/schedule_item_title"
        android:text="Gordian Knot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textSize="@dimen/title"
        android:textStyle="bold" />
 
    <!-- Dates -->
    <TextView
        android:text="17-1-15 : 19-1-15"
        android:id="@+id/schedule_item_dates"
        android:textStyle="italic"
        android:textColor="#3a3a3a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/schedule_item_title"
        android:layout_marginTop="1dip"
        android:textSize="@dimen/rating" />
     
    <!-- Event Genre/ Category  -->
    <TextView
        android:id="@+id/schedule_item_category"
        android:text="-Threads"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/schedule_item_title"
        android:textColor="@color/genre"
        android:textSize="@dimen/genre" />
 
    <!-- Timings -->
    <TextView
        android:text="12:00 AM - 11:59 AM"
        android:id="@+id/schedule_item_timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/time"
        android:textSize="@dimen/time" />
 
</RelativeLayout>

</FrameLayout>